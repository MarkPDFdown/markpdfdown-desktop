{
  "name": "markpdfdown",
  "private": true,
  "version": "1.0.0",
  "description": "A high-quality PDF to Markdown tool based on large language model visual recognition.",
  "author": "MarkPDFdown",
  "main": "dist/main/index.js",
  "type": "module",
  "homepage": "https://github.com/markpdfdown/desktop",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "dev": "npm run generate && npm run build:backend && electron-vite dev",
    "build": "npm run generate && npm run build:backend && electron-vite build",
    "start": "npm run generate && npm run build:backend && electron-vite preview",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:mac": "npm run build && electron-builder --mac --x64 --arm64",
    "build:win": "npm run build && electron-builder --win --x64 --arm64",
    "build:linux": "npm run build && electron-builder --linux --x64 --arm64",
    "migrate:dev": "prisma migrate dev --schema=./app/db/schema.prisma",
    "migrate:reset": "prisma migrate reset --schema=./app/db/schema.prisma",
    "generate": "prisma generate --schema=./app/db/schema.prisma",
    "logo": "electron-icon-builder --input=./src/assets/logo.png --output=./public"
  },
  "build": {
    "appId": "com.markpdfdown.desktop",
    "productName": "MarkPDFdown",
    "files": [
      "dist/**/*",
      "!**/*.db",
      "!**/*.d.ts",
      "!**/*.min.*.map",
      "!**/{.DS_Store,Thumbs.db}"
    ],
    "extraResources": [
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/**/*"
    ],
    "asarUnpack": [
      "**/*.{node,dll,metal,exp,lib}"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "icon": "public/icons/mac/icon.icns"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "icon": "public/icons/win/icon.ico"
    },
    "nsis": {
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "shortcutName": "${productName}",
      "uninstallDisplayName": "${productName}",
      "createDesktopShortcut": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "icon": "public/icons/png"
    },
    "electronDownload": {
      "mirror": "https://github.com/electron/electron/releases/download/"
    },
    "asar": true
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^5.6.1",
    "@prisma/client": "^6.5.0",
    "antd": "^5.24.4",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "electron-is-dev": "^3.0.1",
    "express": "^5.1.0",
    "katex": "^0.16.21",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.3.0",
    "rehype-katex": "^7.0.1",
    "rehype-prism-plus": "^2.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8",
    "electron-icon-builder": "^2.0.1",
    "electron-vite": "^3.1.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.5.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "wait-on": "^8.0.3"
  }
}
